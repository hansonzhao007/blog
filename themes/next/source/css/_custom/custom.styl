// Custom styles.
// 自定义的文章摘要图片样式
img.img-topic {
  clip: rect(0, 100px, 200px, 0);
  width: 100%;
  border-radius: 4px;
  height: 300px;

}
img {
    border-radius: 4px;
    margin-top: 10px !important;
}
code {
    width: 100%;
    border-radius: 4px;
}
body {
  	margin-bottom: 10px;
  	font-style: normal;
	font-variant-ligatures: normal;
	font-variant-caps: normal;
	font-variant-numeric: normal;
	font-variant-east-asian: normal;
	font-weight: normal;
	font-stretch: normal;
	font-size: 14px;
	line-height: 1.6;
	-webkit-font-smoothing: antialiased;
}

.post-body h1 {
	margin-top: 40px;
	margin-bottom: 10px;
	font-size: 32px;
	font-weight: 200;
}

.post-body h1:after
{
    content:' ';
    display:block;
    border:0.5px solid #d0d0d0;
    margin: 0 0 10px 0;
    border-radius: 1px;
}

.post-body h2 {
	margin-top: 10px;
	margin-bottom: 5px;
	font-weight: 200;
}


h1 h2 h3 h4 {
	font-weight: 200;
}

.posts-expand .post-title {
	font-size: 32px;
	font-weight: 200;
}

.post-media-wrapper {
  position: relative;
  margin-bottom: 30px;
}
.datecircle{
	height: 70px;
  margin-bottom: -33px;
  text-align: center;
  position: relative;
	z-index: 1000;
  border-radius: 2px;
  box-shadow;
}
.datecircle-date{
	font-family: "ff-clan-web-pro",sans-serif;
    font-size: 16px;
    background: #0a0a0a;
    color: #111125;
    border-radius: 70px;
    border: 2px solid #000;
    height: 70px;
    width: 70px;
    display: inline-block;
    margin: 0;
    vertical-align: middle;
}
.datecircle-date .day{
	font-size: 20px;
	display: block;
	font-weight: 600;
  margin-top: 19px;
}
.datecircle-date .month{
	font-size: 12px;
	display: block;
	font-weight: 400;
}
.datecircle.no-image{
	height: 47px;
	margin-bottom: 51px;
	border-bottom: 1px solid #dddddd;
}
.datecircle {
	height: auto;
	position: absolute;
	left: 30px;
	bottom: -20px;
	margin-bottom: 0;
}
.datecircle-date {
	border-radius: 0;
	background: #0a0a0a;
	color: #fff;
}

